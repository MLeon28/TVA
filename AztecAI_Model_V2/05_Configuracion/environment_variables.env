# Variables de Entorno para AztecAI
# Copiar y ajustar según tu ambiente

# ============================================
# OLLAMA
# ============================================
OLLAMA_HOST=0.0.0.0:11434
OLLAMA_ORIGINS=*
OLLAMA_DEBUG=false

# GPU (descomentar si tienes NVIDIA)
# CUDA_VISIBLE_DEVICES=0

# ============================================
# OPENWEBUI
# ============================================
WEBUI_NAME="AztecAI - TV Azteca"
WEBUI_URL=http://localhost:3000

# Base URL de Ollama (desde perspective de OpenWebUI)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Autenticación
WEBUI_AUTH=true
WEBUI_SECRET_KEY=your-secret-key-here  # CAMBIAR

# LDAP/SSO (opcional - descomentar y configurar)
# LDAP_SERVER_URL=ldap://ldap.your-company.com
# LDAP_BIND_DN=cn=admin,dc=company,dc=com
# LDAP_BIND_PASSWORD=your-password
# LDAP_USER_SEARCH_BASE=ou=users,dc=company,dc=com

# ============================================
# RAG SETTINGS
# ============================================
RAG_TOP_K=5
RAG_RELEVANCE_THRESHOLD=0.5
CHUNK_SIZE=1500
CHUNK_OVERLAP=150

# ============================================
# RATE LIMITING
# ============================================
USER_RATE_LIMIT_PER_MINUTE=20
GLOBAL_RATE_LIMIT_PER_MINUTE=200

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info  # debug, info, warning, error
ENABLE_COMMUNITY_SHARING=false

